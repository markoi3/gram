



<div class="pass-bg">
  <div class="container">
    <div class="row">
      <div class="col-md-4 col-md-offset-4">
        <div class="log-in panel">
          <div class="panel-heading">
            <h2>Reset Password</h2>
          </div>
          <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
            <%= f.error_notification %>
            <div class="panel-body">
              <%= f.input :email, required: true, label: false, placeholder: 'Your email', input_html: { class: 'input-lg' } %>
              <%= f.button :submit, "Reset Password", class: 'btn-lg btn-info black-background white btn-block' %>
            </div>
          <% end %>
        </div>
        
        <div class="follow text-center"
               <h3>Instructions to reset your password</br >
               will be sent to your email.
               </h3>
        
          <div class="signup text-center">
            <%= link_to 'Create an account', new_user_registration_path %>
            </br >
            <%= link_to 'Login', new_user_session_path %>
            </div>
      </div>
    </div>
  </div>
</div>

